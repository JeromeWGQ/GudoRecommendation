<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ccc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#ccc"
            android:gravity="center"
            android:text="编辑个人资料"
            android:textColor="#000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_profileOk"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:text="确认"
            android:textSize="20sp" />
    </RelativeLayout>

    <!--修改头像-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="128dp">

            <ImageView
                android:id="@+id/iv_portrait"
                android:layout_width="128dp"
                android:layout_height="128dp" />
        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改头像"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editPortrait"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text=">" />

    </LinearLayout>
    <!--修改昵称-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ccc"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="昵称"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=">" />
    </LinearLayout>
    <!--修改性别-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="性别"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editSex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=">" />
    </LinearLayout>
    <!--修改年龄-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ccc"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="年龄"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="年龄"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editAge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=">" />
    </LinearLayout>

    <!--修改兴趣-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="兴趣"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_hobby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editHobbies"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=">" />
    </LinearLayout>
    <!--修改修改个性签名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ccc"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="个性签名"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_autograph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editAutograph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=">" />
    </LinearLayout>
    <!--修改运动目的-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="运动目的"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_goal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editGoal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=">" />
    </LinearLayout>
    <!--显示减肥信息-->
    <LinearLayout
        android:id="@+id/ll_weightInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="目标体重:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_goalWeight"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"

            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="目标天数:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_goalTime"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ccc"
        android:text="身体指标(非公开)"
        android:textColor="#555"
        android:textSize="12sp" />
    <!--修改身高-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="身高"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editHeight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=">" />
    </LinearLayout>
    <!--修改体重-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ccc"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="体重"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editWeight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=">" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fff"></LinearLayout>

</LinearLayout>
