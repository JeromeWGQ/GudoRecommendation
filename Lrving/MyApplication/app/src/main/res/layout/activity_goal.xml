<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#fff">
        <!--取消按钮 按下返回-->
        <Button
            android:id="@+id/btn_goalCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动目的"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_centerInParent="true"/>
        <!--确定按钮按下修改信息并返回-->
        <Button
            android:id="@+id/btn_goalOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <RadioGroup
            android:id="@+id/rg_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <RadioButton
                android:id="@+id/rb_bodybuilding"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健身"
                android:button="@drawable/building"/>
            <RadioButton
                android:id="@+id/rb_reduceWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="减肥"
                android:button="@drawable/reduce" />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/ll_goalWeight"
            android:layout_width="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目标体重:"
                android:layout_gravity="center_vertical"/>
            <NumberPicker
                android:id="@+id/np_goalWeight"
                android:layout_width="64dp"
                android:layout_height="100dp"
                android:layout_gravity="center">
            </NumberPicker>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_goalTime"
            android:layout_width="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目标时间:"
                android:layout_gravity="center_vertical"/>
            <NumberPicker
                android:id="@+id/np_goalTime"
                android:layout_width="64dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                >
            </NumberPicker>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
